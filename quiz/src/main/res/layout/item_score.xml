<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/spacing_double"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_normal">

    <ImageView
        android:id="@+id/solved_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_tick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_double"
        android:layout_toEndOf="@id/solved_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Topeka.TextAppearance.ListItem"
            tools:text="What's the answer to this question?" />

        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Topeka.TextAppearance.ListItemSecondary"
            tools:text="This is an answer.\nThis too." />
    </LinearLayout>
</RelativeLayout>